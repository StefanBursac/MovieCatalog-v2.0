<Window x:Class="sadas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sadas"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <CheckBox x:Name="checkBox" Content="CheckBox" HorizontalAlignment="Left" Margin="20,165,0,0" VerticalAlignment="Top" Height="35" Width="141" Checked="checkBox_Checked"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="120" Margin="15,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" TextChanged="textBox_TextChanged" FontSize="{Binding CheckBox}"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="25,215,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <RadioButton x:Name="radioButton" Content="RadioButton" HorizontalAlignment="Left" Margin="315,70,0,0" VerticalAlignment="Top" Height="90" Width="195"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="285,170,0,0" VerticalAlignment="Top" Width="195" Height="50" SelectionChanged="comboBox_SelectionChanged"/>
    </Grid>
</Window>
